<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:id="root" stylesheets="@/css/effect/change_tempo.css">
    <children>
        <HBox spacing="10" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0">
            <children>
                <Label fx:id="labelTempo" text="Tempo" />
                <Slider fx:id="sliderTempo" min="0.1" max="5" value="1" />
                <TextField fx:id="sliderTempoText" text="" prefWidth="50" />
            </children>
        </HBox>
        <HBox spacing="10" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Button fx:id="btnOk" text="OK" onAction="#handleBtnOkClick" />
                <Button fx:id="btnCancel" text="Cancel" onAction="#handleBtnCancelClick" />
            </children>
        </HBox>
    </children>
</AnchorPane>
